{
  "name": "action-create-env",
  "version": "1.0.0",
  "description": "GitHub Action for creating .env files",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:DeveloperRic/action-create-env.git"
  },
  "keywords": [
    "github",
    "actions",
    "create",
    "env",
    "dotenv"
  ],
  "author": "https://github.com/DeveloperRic",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.4.0",
    "dedent": "^0.7.0"
  },
  "devDependencies": {
    "@types/dedent": "^0.7.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.4",
    "@vercel/ncc": "^0.28.6",
    "jest": "^26.6.3",
    "jest-circus": "^27.0.4",
    "js-yaml": "^4.1.0",
    "prettier": "2.3.1",
    "ts-jest": "^26.5.6",
    "typescript": "^4.3.4"
  }
}
